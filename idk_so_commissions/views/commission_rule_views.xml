<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="commission_rule_view_tree" model="ir.ui.view">
        <field name="name">view.commission.rule.tree</field>
        <field name="model">commission.rule</field>
        <field name="arch" type="xml">
            <tree>
                <field name="lower_rate" widget="percentage"/>
                <field name="higher_rate" widget="percentage"/>
                <field name="commission_percentage" widget="percentage"/>
                <field name="commission_type"/>
            </tree>
        </field>
    </record>

    <record id="commission_rule_view_form" model="ir.ui.view">
        <field name="name">view.commission.rule.form</field>
        <field name="model">commission.rule</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="lower_rate" widget="percentage"/>
                        <field name="higher_rate" widget="percentage"/>
                        <field name="commission_percentage" widget="percentage"/>
                        <field name="commission_type"/>
                    </group>
                </group>
            </form>
        </field>
    </record>
</odoo>
