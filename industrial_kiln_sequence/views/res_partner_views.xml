<?xml version='1.0' encoding='utf-8'?>

<odoo>
    <record id="res_partner_add_plant_code_sequence_industrial_kiln" model="ir.ui.view">
        <field name="name">view_res_partner_inherit_add_plant_code_sequence_industrial_kiln</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="before">
                <div class="content-group" colspan="2" attrs="{'invisible': [('plant_code','=',False)]}">   
                       <group>
                            <label for="plant_code" string="Plant code" />
                             <div  attrs="{'invisible': [('plant_code','=',False)]}">
                                <field name="plant_code" />
                            </div>     
                       </group> 
                    </div>      
            </xpath>
        </field>
    </record>
</odoo>