<?xml version='1.0' encoding='utf-8'?>

<odoo>
    <record id="res_partner_add_plant_code_sequence_industrial_kiln" model="ir.ui.view">
        <field name="name">view_res_partner_inherit_add_plant_code_sequence_industrial_kiln</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='o_address_format']" position="after">
                <field name="plant_code" readonly="1"/>
                <field name="plant_sequence" readonly="1"/>
                <div class="content-group"  attrs="{'invisible': [('plant_code','=',False)]}">
                    <div class="mt16">
                        <span class="col-lg-3">Plant Code: <field name="plant_code"/></span>
                        <span class="col-lg-3">Next number in sequence: <field name="plant_sequence"/></span>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>