<?xml version='1.0' encoding='utf-8'?>

<odoo>
    <record id="res_config_settings_inherit_add_config_barcode" model="ir.ui.view">
        <field name="name">view_res_config_settings_inherit_add_config_barcode</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='no_edit_order']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="job_number_configurator">
                    <div class="o_setting_left_pane">
                        <field name="job_number_activate"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="job_number_activate"/>
                        <div class="text-muted">
                            Addition of job number to sales quotation and sales order  
                        </div>
                        <div class="content-group"  attrs="{'invisible': [('job_number_activate','=',False)]}">
                            <div class="mt16">
                                <span class="col-lg-3">Job number start sequence: <field name="job_number_start_number"/></span>
                                <span class="col-lg-3">Next job number in sequence: <field name="next_job_number"/></span>
                                <span class="col-lg-3">Prefix options: <field name="prefix_job_number_set"/></span>                  
                                <span class="col-lg-3">Suffix options: <field name="suffix_job_number_set"/></span>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>