<?xml version='1.0' encoding='utf-8'?>

<odoo>
        <record id="view_sales_order_job_number_industrialkiln" model="ir.ui.view">
            <field name="name">sale.order.form.job.number.industrialkiln</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <div class="content-group" colspan="2" attrs="{'invisible': [('state','=','draft')]}"> -->
                    <!-- <div class="content-group" colspan="2"> -->
                        <group>
                            <label for="sequence_job_number" string="Job number" />
                             <div  attrs="{'invisible': [('state','=','draft')]}">
                                <field name="prefix_job_number" placeholder="Select prefix"/><field name="sequence_job_number"/><field name="suffix_job_number" placeholder="Select suffix"/>     
                            </div>
                        </group>        
                    </div>            
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <div class="content-group" colspan="2" attrs="{'invisible': [('plant_code_sequence','=',False)]}">   
                       <group>
                            <label for="plant_code_sequence" string="Plant code" />
                             <div  attrs="{'invisible': [('plant_code_sequence','=',False)]}">
                                <field name="plant_code_sequence" readonly="1"/>
                            </div>     
                       </group> 
                    </div>            
                </xpath>
            </field>
        </record>
</odoo>