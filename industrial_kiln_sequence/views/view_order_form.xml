<?xml version='1.0' encoding='utf-8'?>

<odoo>
        <record id="view_sales_order_job_number_field" model="ir.ui.view">
            <field name="name">sale.order.form.job.number</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="prefix_job_number" placeholder="Select"/>
                    <field name="sequence_job_number" />
                    <field name="suffix_job_number" placeholder="Select"/>
                     <!-- <form>Job number: <field name="prefix_job_number"/><field name="sequence_job_number"/><field name="suffix_job_number"/> </form> -->
                </xpath>
            </field>
        </record>
</odoo>